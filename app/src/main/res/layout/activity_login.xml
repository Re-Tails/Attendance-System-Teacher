<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f3"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imghexagon"
                android:layout_width="140dp"
                android:layout_height="212dp"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:src="@drawable/hexagone1" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/hexagone2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingTop="125dp"
                android:layout_marginLeft="36dp"
                android:layout_marginBottom="90dp"
                android:orientation="vertical">

                <!--    <ImageView-->
                <!--        android:id="@+id/bookIconImageView"-->
                <!--        android:layout_width="222dp"-->
                <!--        android:layout_height="146dp"-->
                <!--        android:layout_centerInParent="true"-->
                <!--        android:contentDescription="@null"-->
                <!--        android:src="@drawable/utswhitelogo" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="LOGIN"
                    android:layout_gravity="left"
                    android:textColor="#ffffff"
                    android:textSize="31.3sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.3sp"
                    android:layout_gravity="left"
                    android:layout_marginTop="52.7dp"
                    android:textColor="#ffffff"
                    android:text="Email"
                    />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:textColorHint="#FFFFFF"
                    android:inputType="textEmailAddress"
                    android:textCursorDrawable="@drawable/white_cursor_color"
                    android:layout_gravity="left"
                    android:maxLines="1"
                    android:layout_marginTop="18dp"
                    android:background="@android:color/transparent"
                    />

                <View
                    android:layout_width="263.7dp"
                    android:layout_height="1dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="6.3dp"
                    android:background="#ffffff"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.3sp"
                    android:textColor="#ffffff"
                    android:layout_gravity="left"
                    android:layout_marginTop="37.3dp"
                    android:text="Password"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">


                    <!-- <customfonts.EditText_Poppins_Semi_Bold
                         android:id="@+id/edtpass"
                         android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="wrap_content"
                         android:textSize="15sp"
                         android:textColorHint="#ffffff"
                         android:maxLength="10"
                         android:textCursorDrawable="@drawable/white_cursor_color"
                         android:maxLines="1"
                         android:textColor="#FFFFFF"
                         android:inputType="textPassword"
                         android:background="@android:color/transparent"
                         />-->

                    <EditText

                        android:id="@+id/password"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColorHint="#ffffff"
                        android:maxLength="10"

                        android:textCursorDrawable="@drawable/white_cursor_color"
                        android:maxLines="1"
                        android:textColor="#ffffff"
                        android:background="@android:color/transparent"/>
                    <!--                    app:drawable_hide="@drawable/hide1"-->
                    <!--                    app:drawable_show="@drawable/show"-->
                </LinearLayout>

                <View
                    android:layout_width="263.7dp"
                    android:layout_height="1dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="6.3dp"
                    android:background="#ffffff"/>


                <TextView
                    android:id="@+id/forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12.3sp"
                    android:textColor="#ffffff"
                    android:layout_gravity="right"
                    android:layout_marginTop="17.3dp"
                    android:text="Forgot Password?"
                    />

                <FrameLayout
                    android:id="@+id/fl_login"
                    android:layout_width="40.7dp"
                    android:layout_height="45.3dp"
                        android:layout_gravity="right"
                    android:layout_marginTop="17.3dp"
                    android:background="@drawable/white_hexagone">
                    <!--                    android:layout_gravity="bottom|right"-->
                    <ImageView
                        android:layout_width="18.7dp"
                        android:layout_height="15.3dp"
                        android:layout_gravity="center"
                        android:src="@drawable/right_arrow" />


                </FrameLayout>

            </LinearLayout>



        </FrameLayout>





    </LinearLayout>


</LinearLayout>
